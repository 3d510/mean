include _includes/sharedHTMLfunctions

extends layout

block content
    #banner.page-header
        .row
            .col-lg-6
                h1 #{pageHeader.title}
                    small &nbsp; #{pageHeader.strapline}
    .row
        .col-xs-12.col-sm-8
            .row.list-group
                each location in locations
                    .col-xs-12.list-group-item
                        h4
                            a(href='/location') #{location.name}
                            small &nbsp;
                                //- for (var i=0;i<location.rating;i++)
                                //    span.glyphicon.glyphicon-star
                                //- for ( var i=0;i<5-location.rating;i++)
                                //    span.glyphicon.glyphicon-star-empty
                                +outputRating(location.rating)
                            span.badge.pull-right.bage-default  #{location.distance}
                        p.address  #{location.address}
                        p
                            each facility in location.facilities
                                span.label.label-warning #{facility}
                                | &nbsp;

        .col-xs-12.col-sm-4
            p.lead Loc8r helps you find the places to work when out and about.